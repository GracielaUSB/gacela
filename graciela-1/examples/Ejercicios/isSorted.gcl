program main begin

func isSorted : (x : int, arr : array [x] of int, lo : int, hi : int) -> boolean
begin
  if (lo == hi) -> true
  [] (lo < hi) -> 
    if (arr[lo] <= arr[lo+1]) -> isSorted(x, arr, lo+1, hi)
    [] (arr[lo] > arr[lo+1]) -> false
    fi
  fi
end

|[
  var x : array [5] of int;

  x[0] := 1;
  x[1] := 2;
  x[2] := 3;
  x[3] := 4;
  x[4] := 1;
  writeln(isSorted(5, x, 0, 4))
]|

end
