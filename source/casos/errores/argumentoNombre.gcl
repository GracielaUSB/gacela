program main |[

  proc sumar : (inout suma : int, in n : int) 
  [
      {pre suma >= 0 /\ n >= 0 pre}  
      |[
          suma := suma + n
      ]|  
      {post suma <= suma + n post}
  ]

  func restar : (m : int, restar : int) -> int
  |[
      m + restar
  ]|

  |[
      var   foo, bar := 2, 797 : int;
      sumar(foo, bar);
      bar := restar(bar, foo)
  ]|
]|
