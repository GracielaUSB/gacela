program main |[

  proc sumar : (inout sumar : int, in n : int) 
  [
      {pre sumar >= 0 /\ n >= 0 pre}  
      |[
          sumar := sumar + n
      ]|  
      {post sumar <= sumar + n post}
  ]

  func restar : (m : int, n : int) -> int
  |[
      m + n
  ]|

  |[
      var   foo, bar := 2, 797 : int;


      sumar(foo, bar);

      bar := restar(bar, foo)
  ]|
]|
