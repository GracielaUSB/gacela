program main |[

  proc sumar : (inout m : int, in n : int) 
  [
      {pre m >= 0 /\ n >= 0 pre}  
      |[
          m := m + n
      ]|  
      {post m <= m + n post}
  ]

  func restar : (m : int, n : int) -> double
  |[
      m + n
  ]|

  |[
      var foo, bar, baz := 2, 797, 82 : int;

      sumar(foo, bar);

      bar := restar(foo, baz)

  ]|
]|
